<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.example.calculator.customenum.ENumber"/>
        <import type="com.example.calculator.customenum.EOperation"/>

        <import type="android.view.View"/>

        <variable
            name="viewModel"
            type="com.example.calculator.MainViewModel" />

        <variable
            name="historyAdapter"
            type="com.example.calculator.history.adapter.HistoryAdapter" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/tv_suggest"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:text="@{viewModel.expression}"
            android:textAlignment="textEnd"
            android:textSize="@dimen/_50sdp"
            android:textColor="@color/text"
            tools:text="100"/>

        <TextView
            android:id="@+id/tv_suggest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/ll_controls"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginBottom="0dp"
            android:text="@{viewModel.previewResult}"
            android:textAlignment="textEnd"
            android:textColor="@color/text_hint"
            android:textSize="@dimen/_25sdp"
            tools:text="0"/>

        <LinearLayout
            android:id="@+id/ll_controls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/lineView"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_history"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:background="@android:color/transparent"
                android:textSize="@dimen/_30sdp"
                app:cornerRadius="@dimen/_36sdp"
                app:elevation="0dp"
                android:onClick="@{() -> viewModel.toggleHistory()}"
                app:icon="@drawable/baseline_access_time_24"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="@dimen/_20sdp"
                app:iconTint="@color/icon"
                app:iconTintMode="src_in" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_orientation"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:background="@android:color/transparent"
                android:textSize="@dimen/_30sdp"
                app:cornerRadius="@dimen/_36sdp"
                app:elevation="0dp"
                app:icon="@drawable/baseline_rotate_right_24"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="@dimen/_20sdp"
                app:iconTint="@color/icon"
                app:iconTintMode="src_in" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_backspace"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginLeft="@dimen/_180sdp"
                android:onClick="@{() -> viewModel.deleteCharacterOrFunction()}"
                android:background="@android:color/transparent"
                android:textSize="@dimen/_30sdp"
                app:cornerRadius="@dimen/_36sdp"
                app:elevation="0dp"
                app:icon="@drawable/baseline_backspace_24"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="@dimen/_20sdp"
                app:iconTint="@color/icon"
                app:iconTintMode="src_in" />


        </LinearLayout>


        <View
            android:id="@+id/lineView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_above="@id/ll_buttons"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:background="@color/text_hint" />

        <LinearLayout
            android:id="@+id/ll_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_c"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:onClick="@{() -> viewModel.clearExpression()}"
                    android:backgroundTint="@color/btn_background"
                    android:visibility="@{viewModel.isHistoryVisible ? View.INVISIBLE : View.VISIBLE}"
                    android:text="C"
                    android:textColor="@color/text_v2"
                    android:textSize="@dimen/_30sdp"
                    app:cornerRadius="@dimen/_36sdp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_bracket"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:backgroundTint="@color/btn_background"
                    android:visibility="@{viewModel.isHistoryVisible ? View.INVISIBLE : View.VISIBLE}"
                    android:text="()"
                    android:textColor="@color/text"
                    android:textSize="@dimen/_30sdp"
                    android:onClick="@{() -> viewModel.addParenthesesToExpression()}"
                    app:cornerRadius="@dimen/_36sdp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_percent"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:backgroundTint="@color/btn_background"
                    android:visibility="@{viewModel.isHistoryVisible ? View.INVISIBLE : View.VISIBLE}"
                    android:text="%"
                    android:textColor="@color/text"
                    android:textSize="@dimen/_30sdp"
                    android:onClick="@{() -> viewModel.addOperationToExpression(EOperation.MODULO)}"
                    app:cornerRadius="@dimen/_36sdp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_divide"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:backgroundTint="@color/btn_background"
                    android:text="รท"
                    android:textColor="@color/text"
                    android:textSize="@dimen/_30sdp"
                    android:onClick="@{() -> viewModel.addOperationToExpression(EOperation.DIVISION)}"
                    app:cornerRadius="@dimen/_36sdp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_7"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:backgroundTint="@color/btn_background"
                    android:visibility="@{viewModel.isHistoryVisible ? View.INVISIBLE : View.VISIBLE}"
                    android:text="7"
                    android:textColor="@color/text"
                    android:textSize="@dimen/_30sdp"
                    android:onClick="@{() -> viewModel.addNumberToExpression(ENumber.SEVEN)}"
                    app:cornerRadius="@dimen/_36sdp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_8"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:backgroundTint="@color/btn_background"
                    android:visibility="@{viewModel.isHistoryVisible ? View.INVISIBLE : View.VISIBLE}"
                    android:text="8"
                    android:textColor="@color/text"
                    android:textSize="@dimen/_30sdp"
                    android:onClick="@{() -> viewModel.addNumberToExpression(ENumber.EIGHT)}"
                    app:cornerRadius="@dimen/_36sdp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_9"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:backgroundTint="@color/btn_background"
                    android:visibility="@{viewModel.isHistoryVisible ? View.INVISIBLE : View.VISIBLE}"
                    android:text="9"
                    android:textColor="@color/text"
                    android:textSize="@dimen/_30sdp"
                    android:onClick="@{() -> viewModel.addNumberToExpression(ENumber.NINE)}"
                    app:cornerRadius="@dimen/_36sdp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_multip"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:backgroundTint="@color/btn_background"
                    android:text="ร"
                    android:textColor="@color/text"
                    android:textSize="@dimen/_30sdp"
                    android:onClick="@{() -> viewModel.addOperationToExpression(EOperation.MULTIPLICATION)}"
                    app:cornerRadius="@dimen/_36sdp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_4"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:backgroundTint="@color/btn_background"
                    android:visibility="@{viewModel.isHistoryVisible ? View.INVISIBLE : View.VISIBLE}"
                    android:text="4"
                    android:textColor="@color/text"
                    android:textSize="@dimen/_30sdp"
                    android:onClick="@{() -> viewModel.addNumberToExpression(ENumber.FOUR)}"
                    app:cornerRadius="@dimen/_36sdp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_5"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:backgroundTint="@color/btn_background"
                    android:visibility="@{viewModel.isHistoryVisible ? View.INVISIBLE : View.VISIBLE}"
                    android:text="5"
                    android:textColor="@color/text"
                    android:textSize="@dimen/_30sdp"
                    android:onClick="@{() -> viewModel.addNumberToExpression(ENumber.FIVE)}"
                    app:cornerRadius="@dimen/_36sdp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_6"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:backgroundTint="@color/btn_background"
                    android:visibility="@{viewModel.isHistoryVisible ? View.INVISIBLE : View.VISIBLE}"
                    android:text="6"
                    android:textColor="@color/text"
                    android:textSize="@dimen/_30sdp"
                    android:onClick="@{() -> viewModel.addNumberToExpression(ENumber.SIX)}"
                    app:cornerRadius="@dimen/_36sdp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_minus"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:backgroundTint="@color/btn_background"
                    android:contentDescription="Divide Button"
                    android:text="๏ผ"
                    android:textColor="@color/text"
                    android:textSize="@dimen/_30sdp"
                    android:onClick="@{() -> viewModel.addOperationToExpression(EOperation.SUBTRACTION)}"
                    app:cornerRadius="@dimen/_36sdp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_1"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:backgroundTint="@color/btn_background"
                    android:visibility="@{viewModel.isHistoryVisible ? View.INVISIBLE : View.VISIBLE}"
                    android:text="1"
                    android:textColor="@color/text"
                    android:textSize="@dimen/_30sdp"
                    android:onClick="@{() -> viewModel.addNumberToExpression(ENumber.ONE)}"
                    app:cornerRadius="@dimen/_36sdp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_2"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:backgroundTint="@color/btn_background"
                    android:visibility="@{viewModel.isHistoryVisible ? View.INVISIBLE : View.VISIBLE}"
                    android:text="2"
                    android:textColor="@color/text"
                    android:textSize="@dimen/_30sdp"
                    android:onClick="@{() -> viewModel.addNumberToExpression(ENumber.TWO)}"
                    app:cornerRadius="@dimen/_36sdp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_3"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:backgroundTint="@color/btn_background"
                    android:visibility="@{viewModel.isHistoryVisible ? View.INVISIBLE : View.VISIBLE}"
                    android:text="3"
                    android:textColor="@color/text"
                    android:textSize="@dimen/_30sdp"
                    android:onClick="@{() -> viewModel.addNumberToExpression(ENumber.THREE)}"
                    app:cornerRadius="@dimen/_36sdp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_add"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:backgroundTint="@color/btn_background"
                    android:text="+"
                    android:textColor="@color/text"
                    android:textSize="@dimen/_30sdp"
                    android:onClick="@{() -> viewModel.addOperationToExpression(EOperation.ADDITION)}"
                    app:cornerRadius="@dimen/_36sdp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_opposite"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:backgroundTint="@color/btn_background"
                    android:visibility="@{viewModel.isHistoryVisible ? View.INVISIBLE : View.VISIBLE}"
                    android:text="ยฑ"
                    android:textColor="@color/text"
                    android:textSize="@dimen/_30sdp"
                    android:onClick="@{() -> viewModel.makeNegativeNumber()}"
                    app:cornerRadius="@dimen/_36sdp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_o0"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:backgroundTint="@color/btn_background"
                    android:visibility="@{viewModel.isHistoryVisible ? View.INVISIBLE : View.VISIBLE}"
                    android:text="0"
                    android:textColor="@color/text"
                    android:textSize="@dimen/_30sdp"
                    android:onClick="@{() -> viewModel.addNumberToExpression(ENumber.ZERO)}"
                    app:cornerRadius="@dimen/_36sdp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_point"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:backgroundTint="@color/btn_background"
                    android:visibility="@{viewModel.isHistoryVisible ? View.INVISIBLE : View.VISIBLE}"
                    android:text="."
                    android:textColor="@color/text"
                    android:textSize="@dimen/_30sdp"
                    android:onClick="@{() -> viewModel.addDecimalPointToExpression()}"
                    app:cornerRadius="@dimen/_36sdp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_result"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:backgroundTint="@color/text_hint"
                    android:text="="
                    android:textColor="@color/btn_background"
                    android:textSize="@dimen/_30sdp"
                    android:onClick="@{() -> viewModel.applyResultForExpression()}"
                    app:cornerRadius="@dimen/_36sdp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_history"
            android:layout_width="@dimen/_210sdp"
            android:layout_height="match_parent"
            android:layout_below="@id/lineView"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/_16sdp"
            android:background="?android:attr/windowBackground"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="@{viewModel.isHistoryVisible ? View.VISIBLE : View.GONE}"
            tools:visibility="visible">

            <RelativeLayout
                android:layout_width="@dimen/_205sdp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:padding="@dimen/_7sdp">

                <ScrollView
                    android:id="@+id/sv_history"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_280sdp"
                    android:layout_above="@id/btn_delete_history"
                    android:layout_alignParentTop="true"
                    android:layout_margin="@dimen/_10sdp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_history"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:overScrollMode="never"
                        android:adapter="@{historyAdapter}"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        android:textAlignment="textEnd" />
                </ScrollView>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_delete_history"
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:backgroundTint="@color/btn_background"
                    android:text="@string/btn_delete_history"
                    android:textColor="@color/text"
                    android:textSize="@dimen/_15sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:onClick="@{() -> viewModel.clearAllHistory()}" />

            </RelativeLayout>

            <View
                android:id="@+id/lineView2"
                android:layout_width="@dimen/_1sdp"
                android:layout_height="@dimen/_340sdp"
                android:layout_centerHorizontal="true"
                android:background="@color/text_hint" />
        </LinearLayout>

    </RelativeLayout>
</layout>