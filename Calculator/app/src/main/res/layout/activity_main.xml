<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.example.calculator.customenum.ENumber" />

        <import type="com.example.calculator.customenum.EOperation" />

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.example.calculator.MainViewModel" />

        <variable
            name="historyAdapter"
            type="com.example.calculator.history.adapter.HistoryAdapter" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_primary">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/tv_suggest"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_5sdp">

            <TextView
                android:id="@+id/tv_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"

                android:text="@{viewModel.expression}"
                android:textSize="@dimen/_40sdp" />
        </ScrollView>

        <TextView
            android:id="@+id/tv_suggest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/ll_controls"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginBottom="0dp"
            android:text="@{viewModel.previewResult}"
            android:textAlignment="textEnd"
            android:textColor="@color/text_hint"
            android:textSize="@dimen/_25sdp"
            tools:text="0" />

        <LinearLayout
            android:id="@+id/ll_controls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/lineView"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_history"
                    style="@style/ButtonPrimary"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:background="@android:color/transparent"
                    android:onClick="@{() -> viewModel.toggleHistory()}"
                    android:textSize="@dimen/_18sdp"
                    app:cornerRadius="@dimen/btn_circle_radius"
                    app:elevation="0dp"
                    app:icon="@drawable/baseline_access_time_24"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconSize="@dimen/_20sdp"
                    app:iconTint="@color/icon"
                    app:iconTintMode="src_in" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_orientation"
                    style="@style/ButtonPrimary"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:background="@android:color/transparent"
                    android:textSize="@dimen/_18sdp"
                    app:cornerRadius="@dimen/btn_circle_radius"
                    app:elevation="0dp"
                    app:icon="@drawable/baseline_rotate_left_24"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconSize="@dimen/_20sdp"
                    app:iconTint="@color/icon"
                    app:iconTintMode="src_in" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right">


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_backspace"
                    style="@style/ButtonPrimary"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:background="@android:color/transparent"
                    android:onClick="@{() -> viewModel.deleteCharacterOrFunction()}"
                    android:textSize="@dimen/_18sdp"
                    app:cornerRadius="@dimen/btn_circle_radius"
                    app:elevation="0dp"
                    app:icon="@drawable/baseline_backspace_24"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconSize="@dimen/_20sdp"
                    app:iconTint="@color/icon"
                    app:iconTintMode="src_in" />

            </LinearLayout>
        </LinearLayout>


        <View
            android:id="@+id/lineView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_above="@id/ll_buttons"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:background="@color/text_hint" />

        <LinearLayout
            android:id="@+id/ll_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_c"
                    style="@style/ButtonPrimary"
                    android:layout_width="@dimen/btn_circle_size"
                    android:layout_height="@dimen/btn_circle_size"
                    android:layout_margin="@dimen/_5sdp"
                    android:onClick="@{() -> viewModel.clearExpression()}"
                    android:text="C"
                    android:textColor="@color/text_v2"
                    android:visibility="@{viewModel.isHistoryVisible ? View.INVISIBLE : View.VISIBLE}"
                    app:cornerRadius="@dimen/btn_circle_radius" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_bracket"
                    style="@style/ButtonPrimary"
                    android:layout_width="@dimen/btn_circle_size"
                    android:layout_height="@dimen/btn_circle_size"
                    android:layout_margin="@dimen/_5sdp"
                    android:onClick="@{() -> viewModel.addParenthesesToExpression()}"
                    android:text="()"
                    android:visibility="@{viewModel.isHistoryVisible ? View.INVISIBLE : View.VISIBLE}"
                    app:cornerRadius="@dimen/btn_circle_radius" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_percent"
                    style="@style/ButtonPrimary"
                    android:layout_width="@dimen/btn_circle_size"
                    android:layout_height="@dimen/btn_circle_size"
                    android:layout_margin="@dimen/_5sdp"
                    android:onClick="@{() -> viewModel.addOperationToExpression(EOperation.MODULO)}"
                    android:text="%"
                    android:visibility="@{viewModel.isHistoryVisible ? View.INVISIBLE : View.VISIBLE}"
                    app:cornerRadius="@dimen/btn_circle_radius" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_divide"
                    style="@style/ButtonPrimary"
                    android:layout_width="@dimen/btn_circle_size"
                    android:layout_height="@dimen/btn_circle_size"
                    android:layout_margin="@dimen/_5sdp"
                    android:onClick="@{() -> viewModel.addOperationToExpression(EOperation.DIVISION)}"
                    android:text="รท"
                    app:cornerRadius="@dimen/btn_circle_radius" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_7"
                    style="@style/ButtonPrimary"
                    android:layout_width="@dimen/btn_circle_size"
                    android:layout_height="@dimen/btn_circle_size"
                    android:layout_margin="@dimen/_5sdp"
                    android:onClick="@{() -> viewModel.addNumberToExpression(ENumber.SEVEN)}"
                    android:text="7"
                    android:visibility="@{viewModel.isHistoryVisible ? View.INVISIBLE : View.VISIBLE}"
                    app:cornerRadius="@dimen/btn_circle_radius" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_8"
                    style="@style/ButtonPrimary"
                    android:layout_width="@dimen/btn_circle_size"
                    android:layout_height="@dimen/btn_circle_size"
                    android:layout_margin="@dimen/_5sdp"
                    android:onClick="@{() -> viewModel.addNumberToExpression(ENumber.EIGHT)}"
                    android:text="8"
                    android:visibility="@{viewModel.isHistoryVisible ? View.INVISIBLE : View.VISIBLE}"
                    app:cornerRadius="@dimen/btn_circle_radius" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_9"
                    style="@style/ButtonPrimary"
                    android:layout_width="@dimen/btn_circle_size"
                    android:layout_height="@dimen/btn_circle_size"
                    android:layout_margin="@dimen/_5sdp"
                    android:onClick="@{() -> viewModel.addNumberToExpression(ENumber.NINE)}"
                    android:text="9"
                    app:cornerRadius="@dimen/btn_circle_radius" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_multip"
                    style="@style/ButtonPrimary"
                    android:layout_width="@dimen/btn_circle_size"
                    android:layout_height="@dimen/btn_circle_size"
                    android:layout_margin="@dimen/_5sdp"
                    android:onClick="@{() -> viewModel.addOperationToExpression(EOperation.MULTIPLICATION)}"
                    android:text="ร"
                    app:cornerRadius="@dimen/btn_circle_radius" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_4"
                    style="@style/ButtonPrimary"
                    android:layout_width="@dimen/btn_circle_size"
                    android:layout_height="@dimen/btn_circle_size"
                    android:layout_margin="@dimen/_5sdp"
                    android:onClick="@{() -> viewModel.addNumberToExpression(ENumber.FOUR)}"
                    android:text="4"
                    android:visibility="@{viewModel.isHistoryVisible ? View.INVISIBLE : View.VISIBLE}"
                    app:cornerRadius="@dimen/btn_circle_radius" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_5"
                    style="@style/ButtonPrimary"
                    android:layout_width="@dimen/btn_circle_size"
                    android:layout_height="@dimen/btn_circle_size"
                    android:layout_margin="@dimen/_5sdp"
                    android:onClick="@{() -> viewModel.addNumberToExpression(ENumber.FIVE)}"
                    android:text="5"
                    android:visibility="@{viewModel.isHistoryVisible ? View.INVISIBLE : View.VISIBLE}"
                    app:cornerRadius="@dimen/btn_circle_radius" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_6"
                    style="@style/ButtonPrimary"
                    android:layout_width="@dimen/btn_circle_size"
                    android:layout_height="@dimen/btn_circle_size"
                    android:layout_margin="@dimen/_5sdp"
                    android:onClick="@{() -> viewModel.addNumberToExpression(ENumber.SIX)}"
                    android:text="6"
                    android:visibility="@{viewModel.isHistoryVisible ? View.INVISIBLE : View.VISIBLE}"
                    app:cornerRadius="@dimen/btn_circle_radius" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_minus"
                    style="@style/ButtonPrimary"
                    android:layout_width="@dimen/btn_circle_size"
                    android:layout_height="@dimen/btn_circle_size"
                    android:layout_margin="@dimen/_5sdp"
                    android:contentDescription="Divide Button"
                    android:onClick="@{() -> viewModel.addOperationToExpression(EOperation.SUBTRACTION)}"
                    android:text="๏ผ"
                    app:cornerRadius="@dimen/btn_circle_radius" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_1"
                    style="@style/ButtonPrimary"
                    android:layout_width="@dimen/btn_circle_size"
                    android:layout_height="@dimen/btn_circle_size"
                    android:layout_margin="@dimen/_5sdp"
                    android:onClick="@{() -> viewModel.addNumberToExpression(ENumber.ONE)}"
                    android:text="1"
                    android:visibility="@{viewModel.isHistoryVisible ? View.INVISIBLE : View.VISIBLE}"
                    app:cornerRadius="@dimen/btn_circle_radius" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_2"
                    style="@style/ButtonPrimary"
                    android:layout_width="@dimen/btn_circle_size"
                    android:layout_height="@dimen/btn_circle_size"
                    android:layout_margin="@dimen/_5sdp"
                    android:onClick="@{() -> viewModel.addNumberToExpression(ENumber.TWO)}"
                    android:text="2"
                    android:visibility="@{viewModel.isHistoryVisible ? View.INVISIBLE : View.VISIBLE}"
                    app:cornerRadius="@dimen/btn_circle_radius" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_3"
                    style="@style/ButtonPrimary"
                    android:layout_width="@dimen/btn_circle_size"
                    android:layout_height="@dimen/btn_circle_size"
                    android:layout_margin="@dimen/_5sdp"
                    android:onClick="@{() -> viewModel.addNumberToExpression(ENumber.THREE)}"
                    android:text="3"
                    android:visibility="@{viewModel.isHistoryVisible ? View.INVISIBLE : View.VISIBLE}"
                    app:cornerRadius="@dimen/btn_circle_radius" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_add"
                    style="@style/ButtonPrimary"
                    android:layout_width="@dimen/btn_circle_size"
                    android:layout_height="@dimen/btn_circle_size"
                    android:layout_margin="@dimen/_5sdp"
                    android:onClick="@{() -> viewModel.addOperationToExpression(EOperation.ADDITION)}"
                    android:text="+"
                    app:cornerRadius="@dimen/btn_circle_radius" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_opposite"
                    style="@style/ButtonPrimary"
                    android:layout_width="@dimen/btn_circle_size"
                    android:layout_height="@dimen/btn_circle_size"
                    android:layout_margin="@dimen/_5sdp"
                    android:onClick="@{() -> viewModel.toggleLastNumberSign()}"
                    android:text="ยฑ"
                    android:visibility="@{viewModel.isHistoryVisible ? View.INVISIBLE : View.VISIBLE}"
                    app:cornerRadius="@dimen/btn_circle_radius" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_o0"
                    style="@style/ButtonPrimary"
                    android:layout_width="@dimen/btn_circle_size"
                    android:layout_height="@dimen/btn_circle_size"
                    android:layout_margin="@dimen/_5sdp"
                    android:onClick="@{() -> viewModel.addNumberToExpression(ENumber.ZERO)}"
                    android:text="0"
                    android:visibility="@{viewModel.isHistoryVisible ? View.INVISIBLE : View.VISIBLE}"
                    app:cornerRadius="@dimen/btn_circle_radius" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_point"
                    style="@style/ButtonPrimary"
                    android:layout_width="@dimen/btn_circle_size"
                    android:layout_height="@dimen/btn_circle_size"
                    android:layout_margin="@dimen/_5sdp"
                    android:onClick="@{() -> viewModel.addDecimalPointToExpression()}"
                    android:text="."
                    android:visibility="@{viewModel.isHistoryVisible ? View.INVISIBLE : View.VISIBLE}"
                    app:cornerRadius="@dimen/btn_circle_radius" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_result"
                    style="@style/ButtonPrimaryEmphasize"
                    android:layout_width="@dimen/btn_circle_size"
                    android:layout_height="@dimen/btn_circle_size"
                    android:layout_margin="@dimen/_5sdp"
                    android:onClick="@{() -> viewModel.applyResultForExpression()}"
                    android:text="="
                    app:cornerRadius="@dimen/btn_circle_radius" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_history"
            android:layout_width="@dimen/_210sdp"
            android:layout_height="match_parent"
            android:layout_below="@id/lineView"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/_16sdp"
            android:background="@color/bg_primary"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="@{viewModel.isHistoryVisible ? View.VISIBLE : View.GONE}"
            tools:visibility="gone">

            <RelativeLayout
                android:layout_width="@dimen/_205sdp"
                android:layout_height="match_parent"
                android:background="@color/bg_primary"
                android:gravity="center_horizontal"
                android:padding="@dimen/_7sdp">

                <ScrollView
                    android:id="@+id/sv_history"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_280sdp"
                    android:layout_above="@id/btn_delete_history"
                    android:layout_alignParentTop="true"
                    android:layout_margin="@dimen/_10sdp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_history"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:adapter="@{historyAdapter}"
                        android:orientation="vertical"
                        android:overScrollMode="never"
                        android:textAlignment="textEnd"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
                </ScrollView>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_delete_history"
                    style="@style/ButtonPrimary"
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:onClick="@{() -> viewModel.clearAllHistory()}"
                    android:text="@string/btn_delete_history"
                    android:textSize="@dimen/_15sdp" />

            </RelativeLayout>

            <View
                android:id="@+id/lineView2"
                android:layout_width="1dp"
                android:layout_height="@dimen/_340sdp"
                android:layout_centerHorizontal="true"
                android:background="@color/text_hint" />
        </LinearLayout>

    </RelativeLayout>
</layout>