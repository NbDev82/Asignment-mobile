<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="history"
            type="com.example.calculator.history.History" />

        <variable
            name="listener"
            type="com.example.calculator.history.adapter.HistoryListener" />

        <variable
            name="position"
            type="int" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{() -> listener.onItemClick(position)}"
        android:layout_marginVertical="@dimen/_10sdp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewExpression"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{history.expression}"
            android:textSize="@dimen/_14sdp"
            android:textColor="@color/text"
            android:textAlignment="textEnd"
            tools:text="41231.54564+12312451231+1242342324(234234234)-123123" />

        <TextView
            android:id="@+id/textViewResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="@{`=` + history.result}"
            android:textSize="@dimen/_14sdp"
            android:textAlignment="textEnd"
            android:textColor="@color/text"
            android:maxLines="1"
            tools:text="=41231.54564123123" />

    </LinearLayout>
</layout>